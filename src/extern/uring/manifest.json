{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.component.v1",
    "id": "uring",
    "type": "lib",
    "description": "Linux io_uring library",
    "enableIf": {
        "host": [
            true
        ],
        "sys": [
            "linux"
        ]
    },
    "tools": {
        "cc": {
            "args": [
                "@shell.popen",
                "pkg-config",
                "--cflags",
                "liburing"
            ]
        },
        "cxx": {
            "args": [
                "@shell.popen",
                "pkg-config",
                "--cflags",
                "liburing"
            ]
        },
        "ld": {
            "args": [
                "@shell.popen",
                "pkg-config",
                "--libs",
                "liburing"
            ]
        }
    }
}
